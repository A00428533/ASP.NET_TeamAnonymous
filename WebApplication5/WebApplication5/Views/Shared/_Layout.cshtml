<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title The Dan's Den</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            background: linear-gradient(to bottom, rgba(255,255,255,.7), rgba(255,255,255,.7)),url("https://www.soneva.com/wp-content/uploads/2017/12/2-Bedroom-Water-Retreat-with-Slide_Exterior-by-Mohamed-Asfy.jpg");
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
</head>
<body>
    
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>

                </button>
            </div>
            <center>  <h1><b><font color="white">The Dan's Den</font><b /></h1></center>
        </div>
    </div>
    <div class="container body-content">
        @if (Session["login"] == null)
        {

        }
        else
        {
            <br />
            <p style=" margin-left:1000px;"><b>Welcome, @Session["login"]</b></p>
            <input type="submit" value="LogOut" style="margin-left: 1000px" onclick="document.location.href('/Hotel/Logout')" />
        }

      
        @RenderBody()
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <hr />

        @*<footer>
            <p>&copy; @DateTime.Now.Year - The Dan's Den</p>
        </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
